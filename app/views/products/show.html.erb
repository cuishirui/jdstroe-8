<h1><%= @product.title %></h1>
<div class="row">
<div class="col-md-6">
<% if @product.image.present? %>
  <%= image_tag(@product.image.medium.url, class: "thumbnail")%>
<% else %>
  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail")%>
<% end %>
</div>
<div class="col-md-6">
  <h2><%= @product.title %></h2><br>
  <div style="height: 100px;">


  数量 ：<%= @product.quantity%> $ <%= @product.price %>
</div>
<div class="pull-right">
  <%= link_to("加入购物车", "#", method: :post, class: "btn btn-lg btn-primary")%>
  </div>
</div>
</div>
